@model MyPortfolio.Models.PhotoModel
@{
    ViewBag.Title = "About Me!";
    ViewBag.Message = "I'm a fresh graduate at NAIT from Digital Media and Information Technology program under Computer Software Development stream. I'm seeking for an Software Developer - Entry Level Position.";
}

<div class="w3-margin-top">
    <div class="w3-container w3-card-4 w3-white w3-margin-bottom">
        <div class="w3-container">
            <br />
            <h2>@ViewBag.Title</h2>
            <h6>@ViewBag.Message</h6>
        </div>
    </div>
    <div class="w3-container w3-card-4 w3-white w3-margin-bottom">
        <div class="w3-bar w3-teal w3-margin-top">
            <button class="w3-bar-item w3-button" onclick="openInformation('Project')">Project</button>
            <button class="w3-bar-item w3-button" onclick="openInformation('Skill')">Skills</button>
            <button class="w3-bar-item w3-button" onclick="openInformation('Resume')">Resume</button>
        </div>
        <div id="Project" class="w3-container information w3-margin-bottom w3-margin-top">
            @Html.Action("_PartialViewAboutProject", "Home");
        </div>
        <div id="Skill" class="w3-container information" style="display:none">
            <div class="w3-container w3-card-4 w3-white w3-margin-top">
                <br />
                <h4>ASP.NET Webforms</h4>
                <div class="w3-light-grey w3-round-xlarge w3-small">
                    <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:90%">90%</div>
                </div>
                <p>Knowledgable in using ASP.Net Webforms</p>
                <div class="w3-row-padding w3-margin-top">
                    @{int counter = 1;}
                    @foreach (var image in Model.ImageFilePath)
                    {
                        <div class="mySlides" style="text-align:center">
                            <h5><span style="color:teal; font-weight:100">FSOSS Project - bHS Project</span> </h5>
                            <div class="w3-container w3-card-4 w3-white w3-margin-bottom">
                                <div class="w3-container">

                                    <div class="numbertext" style="text-align:left; font-weight:bolder">@counter / @Model.ImageFilePath.Count()</div>
                                    <img src="@Url.Content(image)" style="width:100%; height:400px">
                                </div>

                            </div>
                        </div>

                        counter++;
                    }
                    <div clas="row" style="text-align:center">
                        <a class="prev" style="color:teal" onclick="plusDivs(-1, 0)">Prev</a>
                        <a class="next" style="color:teal" onclick="plusDivs(1, 0)">Next</a>
                    </div>
                    <br />
                </div>
            </div>
            <div class="w3-container w3-card-4 w3-white w3-margin-top w3-margin-bottom">

                @Html.Action("_PartialViewAboutMVC", "Home");

            </div>
            <div class="w3-container w3-card-4 w3-white w3-margin-top w3-margin-bottom">
                <br />
                <h4>Database Design and Programming</h4>
                <div class="w3-light-grey w3-round-xlarge w3-small">
                    <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:75%">75%</div>
                </div>
                <p>Design and created database for project</p>
                <div class="w3-row-padding w3-margin-top" style="text-align:center">
                    <h5><span style="color:teal; font-weight:100">Database design for FSOSS</span></h5>
                    <div class="w3-container w3-card-4 w3-white w3-margin-bottom">
                        <div class="w3-container w3-margin-bottom">
                            <br />
                            <img src="~/Images/DatabaseDesignImages/FSOSSDatabaseDiagram.jpeg" style="width:50%; height:400px; float:right; border:solid" onclick="document.getElementById('modal01').style.display='block'">
                            <embed src="~/Documents/FSOSSDatabaseInstallScript.txt" style="width:50%; height:400px; float:right; border:solid" />

                            <div id="modal01" class="w3-modal" onclick="this.style.display='none'">
                                <span class="w3-closebtn w3-hover-red w3-container w3-padding-hor-16 w3-display-topright">&times;</span>
                                <div class="w3-modal-content w3-animate-zoom">
                                    <img src="~/Images/DatabaseDesignImages/FSOSSDatabaseDiagram.jpeg" style="width:100%; height:700px">
                                </div>
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="Resume" class="w3-container information" style="display:none">
            <br />
            <div style="border:solid">
                <embed src="~/Documents/Resume.pdf" type="application/pdf" style="width:100%; height:1000px" />
            </div>
            <br />
        </div>
    </div>
</div>

<script>
    function openInformation(info) {
        var i;
        var x = document.getElementsByClassName("information");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        document.getElementById(info).style.display = "block";
    }
    var slideIndex = [1, 1];
    var slideId = ["mySlides", "mySlides2"]
    showDivs(1, 0);
    showDivs(1, 1);

    function plusDivs(n, no) {
        showDivs(slideIndex[no] += n, no);
    }

    function showDivs(n, no) {
        var i;
        var x = document.getElementsByClassName(slideId[no]);
        if (n > x.length) { slideIndex[no] = 1 }
        if (n < 1) { slideIndex[no] = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex[no] - 1].style.display = "block";
    }
</script>

