@model MyPortfolio.Models.PhotoModel
<br />
<h4>ASP.NET MVC</h4>
<div class="w3-light-grey w3-round-xlarge w3-small">
    <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:80%">80%</div>
</div>
<p>Knowledgeable in using ASP.Net MVC </p>
<div class="w3-row-padding w3-margin-top ">
    @{int counter = 1;}
    @foreach (var image in Model.ImageFilePath)
    {
        <div class="mySlides2" style="text-align:center">
            <h5><span style="color:teal; font-weight:100">My Portfolio - Personal project</span> </h5>
            <div class="w3-container w3-card-4 w3-white w3-margin-bottom">
                <div class="w3-container">

                    <div class="numbertext" style="text-align:left; font-weight:bolder">@counter / @Model.ImageFilePath.Count()</div>
                    <img src="@Url.Content(image)" style="width:100%; height:400px">
                </div>

            </div>
        </div>

        counter++;
    }
    <div clas="row" style="text-align:center">
        <a class="prev" style="color:teal" onclick="plusDivs(-1, 1)">Prev</a>
        <a class="next" style="color:teal" onclick="plusDivs(1, 1)">Next</a>
    </div>
</div>

