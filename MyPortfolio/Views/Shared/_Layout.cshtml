        </div>
    </div>
    <div class="container body-content">
                @RenderBody()
                <hr />
                <footer class="w3-container w3-teal w3-center w3-margin-top margin-bottom">
                    <p>Find me on social media</p>
                    <a class="fa fa-facebook-official w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.facebook.com/renzellefrankrodrigueza"></a>&nbsp;&nbsp;
                    <a class="fa fa-instagram w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.instagram.com/rnzllrdrgza"></a>&nbsp;&nbsp;
                    <a class="fa fa-linkedin w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.linkedin.com/in/renzelle-frank-rodrigueza-6b084a118"></a>&nbsp;&nbsp;
                    <a class="fa fa-github w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://github.com/rrodrigueza1"></a>
                </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
