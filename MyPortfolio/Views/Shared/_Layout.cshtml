<!DOCTYPE html>
<html>
<head>
    <title>Renzelle Rodrigueza Portfolio</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        html, body, h1, h2, h3, h4, h5, h6 {
            font-family: "Roboto", sans-serif
        }
    </style>
    <title>@ViewBag.Title - My Portfolio </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="w3-light-grey">
    <div class="w3-top">
        <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
            <div class="w3-center">
                @Html.ActionLink("My Portofolio", "Index", "Home", new { @class = "navbar-brand", @style = "color:teal" })

                @Html.ActionLink("Home", "Index", "Home", new { @style = "color:teal" })
                @Html.ActionLink("About", "About", "Home", new { @style = "color:teal" })
                @Html.ActionLink("Contact", "Contact", "Home", new { @style = "color:teal" })
            </div>
        </div>
    </div>
    <div class="container body-content">
                @RenderBody()
                <hr />
                <footer class="w3-container w3-teal w3-center w3-margin-top margin-bottom">
                    <p>Find me on social media</p>
                    <a class="fa fa-facebook-official w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.facebook.com/renzellefrankrodrigueza"></a>&nbsp;&nbsp;
                    <a class="fa fa-instagram w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.instagram.com/rnzllrdrgza"></a>&nbsp;&nbsp;
                    <a class="fa fa-linkedin w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://www.linkedin.com/in/renzelle-frank-rodrigueza-6b084a118"></a>&nbsp;&nbsp;
                    <a class="fa fa-github w3-hover-opacity" style="font-size:25px; color:white" target="_blank" href="https://github.com/rrodrigueza1"></a>
                </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
